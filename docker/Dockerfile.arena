# =============================================================================
# Project Ouroboros - Arena Container
# =============================================================================
# This container runs the Arena (execution layer) with Claude Code CLI
# and all necessary hooks for trace capture.
#
# Build: docker build -t ouroboros-arena -f docker/Dockerfile.arena .
# Run:   docker run -it --rm -e ANTHROPIC_API_KEY ouroboros-arena
# =============================================================================

FROM python:3.10-slim

LABEL maintainer="Project Ouroboros Team"
LABEL description="Arena container for running Claude Code agents"

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (for Claude CLI)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Claude CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Create working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create data directories
RUN mkdir -p data/gold_traces data/failed_traces data/models data/trajectories

# Create non-root user for security
RUN groupadd -r ouroboros && useradd -r -g ouroboros ouroboros
RUN chown -R ouroboros:ouroboros /app
USER ouroboros

# Default command
CMD ["python", "main.py", "--help"]
